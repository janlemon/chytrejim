{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*", "./src/*"],
      "@features/*": ["./src/features/*"],
      "@onboarding/*": ["./src/onboarding/*"],
      "@lib/*": ["./src/lib/*"],
      "@ui/*": ["./src/ui/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "design/**"
  ]
}
